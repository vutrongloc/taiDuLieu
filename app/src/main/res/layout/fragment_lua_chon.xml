    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.LuaChonFragment">

    <Button
        android:id="@+id/btnLc_TaiBaiHat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tải thông tin bài hát" />

    <Button
        android:id="@+id/btnLc_TaiNgheSi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tải thông tin nghệ sĩ" />

    <Button
        android:id="@+id/btnLc_TaiAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tải thông tin album" />
</LinearLayout>